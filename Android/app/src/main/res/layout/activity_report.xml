<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresher_P"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.dbit.csiapp.mActivityManager.publcity_recycler">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Manager">

        <TextView
            android:id="@+id/no_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="No Reports to Display"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/downloadtemplate">

        </androidx.recyclerview.widget.RecyclerView>





        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/downloadtemplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circular_button_background"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="Download template Button"
            android:cropToPadding="false"
            android:padding="10dp"
            app:srcCompat="@drawable/baseline_sim_card_download_24"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
