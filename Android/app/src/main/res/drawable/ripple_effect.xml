<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Specify a different drawable or color for the pressed state -->
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Adjust the color as needed -->
        </shape>
    </item>
    <item>
        <!-- Default state -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Or any other default color -->
        </shape>
    </item>
</selector>
