  <script>
    // Script for complete table fetch from mysql starts
    $(document).ready(function () {

      load_data();

      function load_data() {
        $.ajax({
          url: "/creativefetchall",
          method: "GET",
          dataType: "JSON",
          success: function (data) {
            console.log("fetched");
            var html = '';
            var status_message = '';
            console.log(data.data[0].proposals_event_name)

            if (data.data.length > 0) {

              for (var count = 0; count < data.data.length; count++) {
                let buttonsDisabled = !data.data[count].hasCreatives ? 'disabled' : '';
              

                html += `
  <tr>                                      
    <td style="vertical-align: middle; text-align: center;color: black;">${data.data[count].proposals_event_name}</td>
    <td style="vertical-align: middle; text-align: center;color: black;">${data.data[count].proposals_event_category}</td>
    <td style="vertical-align: middle; text-align: center;color: black;">${data.data[count].proposals_desc}</td>
    <td style="vertical-align: middle; text-align: center;color: black;">${data.data[count].proposals_creative_budget}</td>                                    
    <td style="vertical-align: middle; text-align: center;">
                    <button type="button" class="btn btn-primary btn-sm show-photos" data-id="${data.data[count].cpm_id}" ${buttonsDisabled}>Show Photos</button>
                    <button type="button" class="btn btn-primary btn-sm show-videos" data-id="${data.data[count].cpm_id}" ${buttonsDisabled}>Show Videos</button>
                </td>
  </tr>
`;

              }
            }


            $('tbody').html(html);

            // Initialize DataTable here, after data is loaded and table is updated
            $('#proposal_data').DataTable({
                    "paging": true,
                    "searching": true,
                    "info": true,
                    "ordering": true,
                    "responsive": true,
                    "autoWidth": true,
                    destroy: true, // This ensures DataTables reinitializes
                    dom: 'Bfrtip',
                buttons: ['csv']
                });

          },
          error: function (XMLHttpRequest, textStatus, errorThrown) {
            console.log("inside AJAX function: Err");
            alert("Status: " + textStatus); alert("Error: " + errorThrown);
          }
        });
      }

      // Script for complete table fetch from mysql ends

      // Script for single row fetch starts

      $(document).ready(function () {
    load_data(); // Call your function to load and display the data

    // Event delegation for dynamically added buttons
    $('body').on('click', '.show-photos', function() {
        var cpmId = $(this).data('id');
        fetchAndShowMedia(cpmId, 'photo');
    });

    $('body').on('click', '.show-videos', function() {
        var cpmId = $(this).data('id');
        fetchAndShowMedia(cpmId, 'video');
    });

    function fetchAndShowMedia(cpmId, type) {
        $.ajax({
            url: "/creativefetchsingle?id=" + cpmId + "&type=" + type,
            method: "GET",
            success: function(data) {
    var itemsHtml = '';
    for (var i = 0; i < data.length; i++) {
        var activeClass = i === 0 ? 'active' : '';
        if (type === 'photo') {
            itemsHtml += `<div class="carousel-item ${activeClass}">
                <img class="d-block w-100" src="${data[i].creative_url}" alt="Media">
            </div>`;
        } else if (type === 'video') {
            itemsHtml += `<div class="carousel-item ${activeClass}">
                <video class="d-block w-100" controls>
                    <source src="${data[i].creative_url}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>`;
        }
    }
    $('#mediaCarousel .carousel-inner').html(itemsHtml);
    $('#mediaModal').modal('show');
},

            error: function(error) {
                console.log("Error fetching media", error);
            }
        });
    }
});





    });

