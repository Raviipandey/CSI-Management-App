<script>
  
  $(document).ready(function () {
    function load_data() {
      $.ajax({
        url: "/publicityall", // Make sure this endpoint exists and is configured in your server
    method: "GET",
    dataType: "JSON",
    success: function (data) {
      var html = '';
      data.data.forEach(function(row) {
        const eventDate = new Date(row.proposals_event_date);

  // Format the date as dd-mm-yyyy
  const formattedDate = eventDate.getDate().toString().padStart(2, '0') + '-' + 
                        (eventDate.getMonth() + 1).toString().padStart(2, '0') + '-' + 
                        eventDate.getFullYear();
        html += `<tr>
                  <td>${row.proposals_event_name}</td>
                  <td>${formattedDate}</td>
                  <td>${row.pr_rcd_amount}</td>
                  <td>${row.pr_spent}</td>
                  <td>${row.pr_desk_publicity}</td>
                  <td>${row.pr_member_count}</td>
                  <td>
                    <a href="${row.documentUrl}" target="_blank" class="btn btn-primary btn-sm">View</a>
                    
                  </td>
                </tr>`;
      });
      $('#publicity_data tbody').html(html);
     

          $('#publicity_data').DataTable({
            "paging": true,
            "searching": true,
            "info": true,
            "ordering": true,
            "responsive": true,
            "autoWidth": true,
            destroy: true // Ensures DataTables reinitializes
          });
        },
        error: function (XMLHttpRequest, textStatus, errorThrown) {
          console.log("Error during AJAX request:", textStatus, errorThrown);
        }
      });
    }

    load_data(); // Call the function to load your data
  });
</script>

